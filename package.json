{
  "name": "@einride/monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:einride-ui",
    "build:einride-ui": "yarn workspace @einride/ui build",
    "build:einride-ui-maps": "yarn workspace @einride/ui-maps build",
    "build-storybook": "storybook build",
    "review": "concurrently --kill-others-on-fail 'yarn commitlint' 'yarn format-check' 'yarn lint' 'yarn test' 'yarn typecheck' 'yarn build'",
    "storybook": "storybook dev -p 6006",
    "test-storybook": "test-storybook",
    "test-storybook-coverage": "test-storybook --coverage",
    "commitlint": "commitlint --from origin/main --to HEAD",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint --ext ts,tsx packages",
    "test": "vitest run",
    "test-watch": "vitest",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@einride/eslint-plugin": "6.23.0",
    "@einride/prettier-config": "2.0.0",
    "@einride/tsconfig": "1.0.1",
    "@storybook/addon-a11y": "7.0.0-rc.8",
    "@storybook/addon-actions": "7.0.0-rc.8",
    "@storybook/addon-coverage": "0.0.8",
    "@storybook/addon-essentials": "7.0.0-rc.8",
    "@storybook/addon-interactions": "7.0.0-rc.8",
    "@storybook/addon-links": "7.0.0-rc.8",
    "@storybook/addons": "7.0.0-rc.8",
    "@storybook/jest": "0.0.11-next.1",
    "@storybook/node-logger": "7.0.0-rc.8",
    "@storybook/react": "7.0.0-rc.8",
    "@storybook/react-vite": "7.0.0-rc.8",
    "@storybook/test-runner": "0.10.0-next.11",
    "@storybook/testing-library": "0.0.14-next.1",
    "@storybook/theming": "7.0.0-rc.8",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "concurrently": "7.6.0",
    "eslint": "8.36.0",
    "eslint-plugin-storybook": "0.6.11",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "storybook": "7.0.0-rc.8",
    "storybook-dark-mode-v7": "3.0.0-alpha.0",
    "typescript": "5.0.2",
    "vite": "4.2.1",
    "vite-plugin-turbosnap": "1.0.1",
    "vite-tsconfig-paths": "4.0.7",
    "vitest": "0.29.7"
  },
  "resolutions": {
    "@testing-library/user-event": "14.4.3"
  },
  "packageManager": "yarn@3.4.1"
}
