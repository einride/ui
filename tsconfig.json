    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
  },
  "include": [
